@model MVCApp.Models.GalleryItem
@{
    ViewBag.Title = "ViewImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<img src="@Model.Uri" style="width: 100%" />

<br />

<p style="font-size: 14px;"><b>Description:</b> @Model.Description</p>
<h4>Copyright: @(Model.AuthorId != null)</h4>

<span>@Html.ActionLink("Back to gallery", "Index", "Images")</span>